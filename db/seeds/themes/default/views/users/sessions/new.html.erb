<article class="form">
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

	<legend><%= t('html.users.sessions.title')%></legend>

	<fieldset>
  	<div>
  		<%= f.email_field :email,
			:"data-label" => t("activerecord.attributes.user.email"), 
			:placeholder => t("activerecord.attributes.user.email") %>
		</div>
	</fieldset>

	<% if Settings.user_setting('password_required', current_branch) != "never" %>
	<fieldset>	
  	<div>
  		<%= f.password_field :password,
			:"data-label" => t("activerecord.attributes.user.password"), 
			:placeholder => t("activerecord.attributes.user.password") %>
		</div>
	</fieldset>
	<% end %>

  <% if devise_mapping.rememberable? %>
	<fieldset>	
    <div>
			<%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display:inline" %>
		</div>
	</fieldset>	
  <% end -%>

  <div class="actions"><%= f.submit t('html.users.sessions.submit') %></div>
	<% end %>

	<%= render "users/shared/links" %>
</article>