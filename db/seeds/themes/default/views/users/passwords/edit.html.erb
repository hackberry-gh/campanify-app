<article class="form">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

	<legend><%= t('html.users.passwords.edit.title')%></legend>
	
  <%= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

	<fieldset>
  <div><%= f.label :password, t('html.users.passwords.edit.new_password') %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, t('html.users.passwords.edit.confirm_new_password') %>
  <%= f.password_field :password_confirmation %></div>
	</fieldset>
	
  <div class="actions"><%= f.submit t('html.users.passwords.edit.submit') %></div>
<% end %>

<%= render "users/shared/links" %>
</article>