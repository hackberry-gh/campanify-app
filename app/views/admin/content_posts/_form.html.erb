<%= semantic_form_for [:admin, @content_post] do |f| %>

<%= render "admin/shared/localized_inputs", f: f, record: @content_page, 
fields: [	{name: :title, options: {} },
					{name: :body, options: {as: "code", mode: "html"} }
] 
%>

	<%= f.inputs do %>
		<%= f.input :published_at, :as => :datetime %>      
		<%= f.input :user %>
	<% end %>
	
	<%= f.buttons %>

<% end %>