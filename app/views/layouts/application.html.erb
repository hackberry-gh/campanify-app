<!DOCTYPE html>
<html>
<head>
	<title><%= t('html.title') %></title>
	<meta name="description" content="<%= t('html.description') %>">
	<%= stylesheet_link_tag    	"application", :media => "all" %>
 	<% Appearance::Asset.css.each do |css| %>
	<%= stylesheet_link_tag    	css.url, :media => "all" %>	
	<% end %>
	<%= javascript_include_tag 	"modernizr" %>
	<%= render "shared/ograph" %>
	<%= csrf_meta_tags %>
	<meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;">
</head>
<body class="<%= body_class %>">

	<%= render "shared/spinner" %>

	<%= render "shared/notifications" %>
	
	<div id="main" role="main">

		<%= render "shared/header" %>
		
		<section id="content">
		<%= yield %>
		</section>

		<%= render "shared/footer" %>
	</div>	
	
	<!-- Application Scripts -->
	<%= render 					"shared/js_bindings" %>	
	<%= javascript_include_tag 	"application" %>
 	<% Appearance::Asset.js.each do |js| %>
	<%= javascript_include_tag 	js.url %>
	<% end %>
	<!-- View Template Scripts -->
	<%= yield :scripts %>
	<!-- 3rd Party Java Scripts -->
	<%= render "shared/fb_js_sdk" %>
	<%= render "shared/add_this" %>
</body>
</html>
